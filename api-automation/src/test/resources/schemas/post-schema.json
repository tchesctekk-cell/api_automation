
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Post Schema",
  "description": "Schema de validacao para objeto Post",
  "type": "object",
  "required": ["userId", "id", "title", "body"],
  "properties": {
    "userId": {
      "type": "integer",
      "minimum": 1,
      "description": "ID do usuario proprietario"
    },
    "id": {
      "type": "integer",
      "minimum": 1,
      "description": "ID unico do post"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Titulo do post"
    },
    "body": {
      "type": "string",
      "minLength": 1,
      "description": "Conteudo do post"
    }
  },
  "additionalProperties": false
}